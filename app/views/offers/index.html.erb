
<%- model_class = Offer -%>



<%= form_tag offers_path, :method => "get" do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Offers" %>
    <%= submit_tag "Search", :class => 'button', :name => nil %>
<% end %>



<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= User %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>

  <% @offers.each do |offer| %>
      <tr>
        <td><%= link_to offer.user.email, offer_path(offer) %></td>
        <td><%= offer.user.email %></td>
        <td><%= offer.description %></td>
        <td><%= offer.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_offer_path(offer), :class => 'button' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      offer_path(offer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'button' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_offer_path,
            :class => 'button' %>
